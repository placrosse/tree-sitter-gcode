{
  "name": "@choconao/tree-sitter-gcode",
  "version": "0.1.1",
  "description": "G-code grammar for tree-sitter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chocolatenao/tree-sitter-gcode.git"
  },
  "license": "MIT",
  "author": {
    "name": "ChocolateNao",
    "email": "andrey12q112@gmail.com",
    "url": "https://choconao.me/"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "gcode"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "eslint-config-treesitter": "^1.0.2",
    "nodemon": "^3.1.10",
    "prebuildify": "^6.0.1",
    "prettier": "^3.5.3",
    "tree-sitter-cli": "^0.25.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "dev": "nodemon",
    "lint": "prettier ./grammar.js --check && eslint ./grammar.js",
    "lint:fix": "prettier ./grammar.js --write && npm run lint -- --fix"
  }
}
